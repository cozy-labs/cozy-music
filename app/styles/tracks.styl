.tracks
    &:not(.upNext)
        .delete-from-upnext
            display: none
    &.upNext
        .normal,
        .reverse,
        .add-to-upnext
            display: none
    &:not(.playlist)
        .drag,
        .remove-from-playlist
            display: none
    &.sort
        .drag
            display: none


    div[role='rowheader']
        width: 100%
        color: $text-light
        display: flex
        color: $text-dark
        font-family: 'Source Sans Pro'
        font-weight: bold
        height: 36px
        box-shadow: inset 0 -2px 0 0 #d5dce1
        font-size: 13px
        text-transform: uppercase

        @media (max-width: 63.9375em)
            display: none

        :not(#number)
            svg
                display: none

        [role='gridcell']
            cursor: pointer
            user-select: none

            > svg
                padding-left: 4px
                width: 16px
                height: 16px
                fill: #f14a53

    [role='gridcell']
        text-align: left
        display: flex;
        align-items: center

    .sort
        svg
            display: inline !important

        .reverse
            display: none

    .sort-reverse
        svg
            display: inline !important

        .normal
            display: none

    .number-column-cell
        justify-content: center
        width: 42px
        .play-icon
            visibility: hidden
            width: 18px
            height: 18px
            fill: $svg

        @media (max-width: 63.9375em)
            display: none

    .song-column-cell
        flex-grow: 1
        color: $text-dark

        @media (max-width: 63.9375em)
            flex-grow: 0

    .artist-column-cell
        width: 200px

    .album-column-cell
        position: relative
        width: 200px

        span
            width: 135px;
            height: 16px;
            overflow: hidden;
            text-overflow: ellipsis;
            white-space: nowrap;

        @media (max-width: 63.9375em)
            color: transparent
            position: absolute
            top: 0px
            right: 0px
            height: 64px

    .length-column-cell
        width: 62px

        @media (max-width: 63.9375em)
            display: none

    .play-icon:hover
        fill: $text-dark

    #track-list
        display: flex
        flex-direction: column

        @media (max-width: 63.9375em)
            margin-bottom: 42px

        > li
            display: flex
            cursor: pointer
            height: 41px
            background-color: transparent
            border-bottom: 1px solid #d5dce1
            font-size: 14px
            color: $text-light
            position: relative

            @media (max-width: 63.9375em)
                padding-left: 14px
                height: 64px
                flex-direction: column
                justify-content: center

                .actions
                    visibility: visible

            .song-column-cell
                font-size: 16px

                @media (max-width: 63.9375em)
                    padding-bottom: 6px

            &.dragged
                opacity: 0.5

            &.dragover:not(.dragged)
                &.below
                    border-bottom: 2px solid $red
                &.above
                    border-top: 2px solid $red
            &.selected
                background-color: $background-dark

            &.playing
                color: $red

                .song-column-cell
                    color: $red

                .play-icon
                    visibility: visible
                    fill: $red

                    .play
                        display: none

        li:hover:not(.dragover)
            background-color: $background-dark

            &:not(.playing)
                .play-icon
                    visibility: visible

                    .speaker
                        display: none

            .actions
                visibility: visible
